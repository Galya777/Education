<UserControl x:Class="EducationServices.OrderCourse"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EducationServices"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Margin="10,28,-10,-28" Grid.RowSpan="2">Course Title</Label>
        <ComboBox Name="cboTitles" Margin="357,28,26,360" Grid.RowSpan="2" ></ComboBox>
        <Label Margin="0,108,0,-108" Grid.RowSpan="2">Course Type</Label>
        <ComboBox Name="cboTypes" Margin="357,108,26,280" Grid.RowSpan="2" ></ComboBox>
        <Label Margin="0,215,0,-215" Grid.RowSpan="2">Number of Students</Label>
        <TextBox Name="txtQty" Margin="357,215,26,173" Grid.RowSpan="2" >0</TextBox>
        <Button x:Name="order" Click="order_Click" Content="Order"></Button>
        <Button x:Name="cancel" Click="cancel_Click" Content="Cancel"></Button>
    </Grid>
</UserControl>
